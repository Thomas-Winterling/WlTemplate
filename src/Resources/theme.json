{
  "name": "WlTemplate",
  "author": "Shopware AG",
  "views": [
     "@Storefront",
     "@Plugins",
     "@WlTemplate"
  ],
  "style": [
    "app/storefront/src/scss/overrides.scss",
    "@Storefront",
    "app/storefront/src/scss/base.scss"
  ],
  "script": [
    "@Storefront",
    "app/storefront/dist/storefront/js/wl-template.js"
  ],
  "asset": [
    "app/storefront/src/assets"
  ],
  "config": {
    "blocks": {
      "general":{
        "label":{
