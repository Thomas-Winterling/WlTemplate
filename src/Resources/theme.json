      }
    },
    "desktop":{
      "label":{
        "en-GB": "Desktop",
        "de-DE": "Desktop"
      }
    },
    "tablet":{
      "label":{
        "en-GB": "Tablet",
        "de-DE": "Tablet"
      }
    },
    "smartphone":{
      "label":{
        "en-GB": "Smartphone",
        "de-DE": "Smartphone"
      }
